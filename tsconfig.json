{
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "declarationDir": "./types",
    "experimentalDecorators": true
  },
  "exclude": [
    "./vite.config.ts",
    "./types/**/*",
    "./example/**/*",
  ]
}